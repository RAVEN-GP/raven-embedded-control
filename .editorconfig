# EditorConfig - Consistent code style for BFMC Embedded Platform
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# C/C++ files - match original Bosch repo style
[*.{cpp,hpp,c,h}]
indent_style = space
indent_size = 4

# Markdown
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# JSON/YAML
[*.{json,yml,yaml}]
indent_style = space
indent_size = 2

# Makefiles require tabs
[Makefile]
indent_style = tab
